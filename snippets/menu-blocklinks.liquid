<!-- menu-blocklink.liquid -->

{%- capture ap_col_links -%}apmenuitem_columns_{{ intMega }}{%- endcapture -%}
{%- capture ap_html_title -%}apmenuitem_mega_link_{{ intMega }}{%- endcapture -%}
{%- capture ap_html_menu -%}apmenuitem_childlink_{{ intMega }}{%- endcapture -%}
<div class="row">
  {%- if settings[ap_html_title] != blank -%}
  	<div class="menu-title">{{ settings[ap_html_title] }}</div>
  {%- endif -%}
  {% if settings[ap_html_menu].links %}
    {%- for childlink in settings[ap_html_menu].links -%}
    <div class="col-lg-{{ settings[ap_col_links] }}">
      <div class="mega-col-inner ">
        <div class="menu-title">
          <a href="{{ childlink.url }}" title="{%- render 'processMenuTitle' with itemName:childlink.title -%}">
            {%- render 'processMenuTitle' with itemName:childlink.title -%}
            {%- render 'processMenuLabel' with itemName:childlink.title -%}
          </a>
          {%- if childlink.links != blank -%}
          <span class="drawer__nav-toggle--open">
            <i class="fa fa-angle-down" aria-hidden="true"></i>
          </span>
          {%- endif -%}
        </div>
        {%- if childlink.links != blank -%}
        <div class="widget-inner">
          <ul class="nav-links">
            
            {%- for grandchildlink in childlink.links -%}
            <li>
              <a href="{{ grandchildlink.url }}" title="{%- render 'processMenuTitle' with itemName:grandchildlink.title -%}">
                {%- render 'processMenuTitle' with itemName:grandchildlink.title -%}
                {%- render 'processMenuLabel' with itemName:grandchildlink.title -%}
              </a>
            </li>
            {%- endfor -%}
          </ul>
        </div>
        {%- endif -%}
      </div>
    </div>
    {%- endfor -%}
  {%- else -%}
  <p>Please configure menu content in theme customization</p>
  {%- endif -%}

  </div>