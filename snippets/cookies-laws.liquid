{%- if settings.cookie_enable -%}
<div class="js-cookie-policy" style="display: none;" data-delay="{%- if settings.enbercookieDelay -%}{{ settings.cookieDelay }}{%- else -%}0{%- endif -%}">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-sm-8 col-md-9 col-lg-10">
		{{settings.cookie_message}}
		<a class="lead-quick-view" href="{{settings.cookie_url | default:'#'}}" target="_blank">{{settings.cookie_url_text}}</a></div>
      <div class="col-sm-4 col-md-3 col-lg-2"><button class="btn btn-theme js-btn-ok lead-btn">{{settings.cookie_ok}}</button></div>
    </div>
  </div>
</div>
{%- endif -%}