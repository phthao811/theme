<div class="main-product-image-slide-layout">
  <div class="product-thumb-image popup-gallery">
    	<ul id="product-gallery-image-zoom" class="product-thumb-image-slick productimagesslick" data-setting='{"accessibility": false, "arrows": true,
            "dots": false, "draggable": true,"centerMode": false,
            "infinite": false, "autoplay": false,
            "autoplaySpeed": 10000, "speed": 1000,
            "slidesToShow": 2, "slidesToScroll": 1,
            "vertical": false, "mobileFirst": false, "pauseOnHover": false,
            "rows": 1, "slidesPerRow": 1, "rtl": 1,
            "slidesToShow_992": 2, "slidesToScroll_992": 1,
            "arrows_992": true, "dots_992": false,
            "slidesToShow_767": 2, "slidesToScroll_767": 1,
            "arrows_767": false, "dots_767": false,
            "slidesToShow_450": 1, "slidesToScroll_450": 1,
            "arrows_450": false, "dots_450": false}'>
      {%- for media in product.media -%}
      {%- unless media.id == product.selected_or_first_available_variant.featured_media.id -%}
        {%- if media.media_type == 'image' -%}
          <li>
        	<img 
               srcset="{% if media.preview_image.width >= 288 %}{{ media | img_url: '288x' }} 288w,{% endif %}
                 {% if media.preview_image.width >= 576 %}{{ media | img_url: '576x' }} 576w,{% endif %}
                 {% if media.preview_image.width >= 550 %}{{ media | img_url: '550x' }} 550w,{% endif %}
                 {% if media.preview_image.width >= 1100 %}{{ media | img_url: '1100x' }} 1100w{% endif %}"
               src="{{ media | img_url: '1100x' }}"
         	   sizes="(min-width: 1200px) calc((1200px - 10rem)), (min-width: 750px) calc((100vw - 11.5rem)), calc(100vw - 4rem)"
               loading="lazy"
               alt="{{ media.preview_image.alt | escape }}"
               data-url="{{ media | img_url: '2000x' }}"
               data-height="{{media.height}}"
               data-width="{{media.width}}" width="auto"
              height="auto"
               >
           </li>
        {%- endif -%}

      {%- endunless -%}
      {%- endfor -%}
    </ul>
    
  </div>
</div>





