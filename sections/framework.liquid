<div class="container">
    <h3 id="html-product-grid" class="html-title text-center my-5">Product grid</h3>
  	{%- for product in collections.all.products limit: 1 -%}
  	  {%- assign product_card_product = product -%}
    {%- endfor -%}
    
  <div class="js-wishlist-content">
    <div class="row grid--quarter-max">
      <div class="col-sm-6 col-md-4 col-lg-3 py-4">
        <h5 class="text-center">Blank</h5>
        <a href="#" class="product-card">
            <div class="product-card__image">
              {%- capture current -%}{%- cycle 1, 2, 3, 4, 5, 6 -%}{%- endcapture -%}
              {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="product-card__info">
              <div class="product-card__name">Example Product Title</div>
              <div class="product-card__price">
                {%- cycle '$19.99', '$28.37', '$33.22', '$41.56', '$55.21', '$62.98' -%}
              </div>
            </div>
          </a>
      </div>
      <div class="col-sm-6 col-md-4 col-lg-3 py-4">
        <h5 class="text-center">Layout 1</h5>
        {%- render 'product-grid-1', product_card_product: product_card_product, media_size: 'adapt' -%}
      </div>
      <div class="col-sm-6 col-md-4 col-lg-3 py-4">
        <h5 class="text-center">Layout 2</h5>
        {%- render 'product-grid-2', product_card_product: product_card_product, media_size: 'adapt' -%}
      </div>
      <div class="col-sm-6 col-md-4 col-lg-3 py-4">
        <h5 class="text-center">Layout 3</h5>
        {%- render 'product-grid-3', product_card_product: product_card_product, media_size: 'adapt' -%}
      </div>
      <div class="col-sm-6 col-md-4 col-lg-3 py-4">
        <h5 class="text-center">Layout 4</h5>
        {%- render 'product-grid-4', product_card_product: product_card_product, media_size: 'adapt' -%}
      </div>
      <div class="col-sm-6 col-md-4 col-lg-3 py-4">
        <h5 class="text-center">Layout 5</h5>
        {%- render 'product-grid-5', product_card_product: product_card_product, media_size: 'adapt' -%}
      </div>
    </div>
  </div>
  
    
  
