<!-- header-4.liquid -->
{{ 'header-4.css' | asset_url | stylesheet_tag }}
{% render 'section-style' %}

<header class="header-4 {%- if section.settings.enable_transparent -%}{{ 'color-transparent' | prepend: ' ' }}{%- endif -%}">
  {%- if section.settings.header_announcement_bar -%}
  <div class="header-4-announcement-bar">
    <div class="{%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">
      <div class="row d-flex align-items-center">
        <div class="header-4-announcement-bar-left">
            <p>{{ section.settings.text_announcement_bar }}</p>
        </div>
      </div>
    </div>
  </div>
  {%- endif -%}
  <div class="header-4-center">
    <div class="{%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">
      <div class="row">
        <div class="header-categories">
          <div class="row">
            <div class="col-6 col-lg-3 col-xl-2 head-logo">
              {%- render 'header-logo' -%}
            </div>

            <div class="col-2 col-lg-6 col-xl-5 header-mobi-mobile header-search">
                {%- if section.settings.header_seach -%}
                  {%- render 'search-header' -%}
                {%- endif -%}
                {%- render 'icon-megamenu-mobile' -%}
            </div>
            
            <div class="col-4 col-lg-3 col-xl-5 header-icon">
              {%- if section.settings.header_wishlist -%}
                {%- render 'wishlist-header' -%}
              {%- endif -%}
              {%- if section.settings.header_sign -%}
                {%- render 'header-sign' -%}
              {%- endif -%}
              {%- if section.settings.currencies -%}
              {%- render 'block-currencies' -%}
              {%- endif -%}
              {%- if section.settings.header_card -%}
                {%- render 'header-cart' -%}
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="header-4-bottom">
    <div class="{%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">
      <div class="row">
        <div class="col-lg-3 col-xl-3 header-bottom">
          <div class="header-vertical-menu">
            <div class="icon-vertical-menu">
              <button type="button" class="vertical-bars">
                {%- render 'icon-menu-mobile' -%}
                <span>Shop by Department</span>
              </button>
            </div>
            {%- render 'vertical-menu' -%}
          </div>
        </div>
        <div class="col-lg-9 col-xl-9 header-megamenu">
          {%- render 'block-menu' -%}
        </div>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "t:sections.header-4.name",
  "class": "spaced-header",
  "tag": "section",
  "settings": [
      {
        "type": "checkbox",
        "id": "fullwidth",
        "label": "t:sections.header-4.settings.fullwidth.label",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "header_announcement_bar",
        "label": "t:sections.header-4.settings.header_announcement_bar.label",
        "default": true
      },
      {
        "type": "text",
        "id": "text_announcement_bar",
        "label": "t:sections.header-4.settings.text_announcement_bar.label",
        "default": "Welcome to our store"
      },
      {
        "id": "background-color",
        "type": "color",
        "label": "t:sections.header-4.settings.background-color.label"
      },
      {
        "id": "logo_align",
        "type": "select",
        "options": [
          {
            "value": "left",
            "label": "t:sections.header-4.settings.logo_align.options__1.label"
          },
          {
            "value": "center",
            "label": "t:sections.header-4.settings.logo_align.options__2.label"
          }
        ],
        "default": "left",
        "label": "t:sections.header-4.settings.logo_align.label"
      },
      {
        "type": "checkbox",
        "id": "header_seach",
        "label": "t:sections.header-4.settings.header_seach.label",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "header_sign",
        "label": "t:sections.header-4.settings.header_sign.label",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "header_wishlist",
        "label": "t:sections.header-4.settings.header_wishlist.label",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "currencies",
        "label": "t:sections.header-4.settings.currencies.label",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "header_card",
        "label": "t:sections.header-4.settings.header_card.label",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_transparent",
        "label": "t:sections.header-4.settings.enable_transparent.label"
      }
      ]
}
{% endschema %}