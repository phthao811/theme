      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Unordered list"
        },
        {
          "type": "textarea",
          "id": "info",
          "label": "More information"
        },
        {
          "type": "liquid",
          "id": "html",
          "label": "HTML codes"
        }
      ]
    }
  ]
}
{% endschema %}