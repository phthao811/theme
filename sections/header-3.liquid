        "id": "header_card",
        "label": "t:sections.header-3.settings.header_card.label",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "header_category",
        "label": "t:sections.header-3.settings.header_category.label",
        "default": true
      }
      ]
}
{% endschema %}