<style>
    :root{
      --faq-cl-mix-1: {{section.settings.cl_mix_1 }};
      --faq-cl-mix-2: {{section.settings.cl_mix_2}};
    }
  </style>
  <style>
    .row-faqs {
     padding-top: 20px
   }
  
   .section-faqs__subheading {
     max-width: 800px;
     margin: 0 auto
   }
  
   .layout-1 .faq-question {
     padding: 20px;
     padding-right:40px;
     background: var(--faq-cl-mix-1);
     margin: 0 0 10px;
     font-weight: 700;
     cursor: pointer;
     color: var(--faq-cl-mix-2);
     position: relative
   }
  
   .layout-1 .faq-question:after {
     content: "-";
     position: absolute;
     top: 0;
     right: 0;
     width: 40px;
     height: 100%;
     display: -webkit-box;
     display: -ms-flexbox;
     display: flex;
     -webkit-box-align: center;
     -ms-flex-align: center;
     align-items: center;
     -webkit-box-pack: center;
     -ms-flex-pack: center;
     justify-content: center
   }
  
   .faq-answer {
     padding: 20px;
     -webkit-transition: height .35s ease;
     -o-transition: height .35s ease;
     transition: height .35s ease
   }
  
   .layout-2 .faq-question {
    padding: 10px 10px 10px 50px;
    margin: 0 0 10px;
    font-weight: 700;
    cursor: pointer;
    position: relative;
    color: var(--faq-cl-mix-1);
    line-height: 40px;
  }
  
  .layout-2 .faq-question:after {
      content: "-";
      width: 40px;
      height: 40px;
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -ms-flex-align: center;
      align-items: center;
      -webkit-box-pack: center;
      -ms-flex-pack: center;
      justify-content: center;
      border: 2px solid;
      border-radius: 50%;
   position:absolute;
   top:calc(50% - 20px);
   left: 0;
  }
  
  .layout-3 .faq-question {
      padding: 20px;
      margin: 0 0 10px;
      font-weight: 700;
      cursor: pointer;
      position: relative;
      padding-right: 60px;
      color: var(--faq-cl-mix-1)
  }
  
  .layout-3 .faq-question:after {
      content: "-";
      position: absolute;
      top: 50%;
      right: 0;
      width: 40px;
      height: 40px;
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -ms-flex-align: center;
      align-items: center;
      -webkit-box-pack: center;
      -ms-flex-pack: center;
      justify-content: center;
      margin-top: -20px;
      border: 2px solid
  }
  
  .faq-question.collapsed:after {
      content: "+";
    font-family: Helvetica;
  }
  
  #ContactForm input,
  #ContactForm textarea {
      width: 100%;
      margin-bottom: 15px
  }
  
  #ContactForm textarea {
      height: 150px
  }
  
  .main-content {
      padding-top: 40px
  }
  
  .html-faqs {
      padding: 20px;
  }
  
  .html-faqs:first-child {
      padding-top: 0;
  }
  
  .html-faqs h3 {
      font-size: 24px;
      margin: 10px 0;
      font-weight: 700;
  }
  
  .html-faqs-des {
      margin-bottom: 20px;
  }
  
  .faq-question {
      clear: both;
  }

  .section-title{
    color: #000;
    margin: 0 0 25px;
    font-size: 30px;
    letter-spacing: -1.05px;
    position: relative;
    text-transform: capitalize;
    font-weight: 700;
    line-height: 1.1;
    text-align: center;
  }

  .section-des{
    font-size: 16px;
    color: #787878;
    text-align: center;
    margin-bottom: 30px;
  }

  .title-form{
    font-size: 24px;
    font-weight: 700;
    margin: 10px 0 40px;
  }

  .section-faqs .col, .section-faqs .col-faqs{
    padding: 0 15px;
  }

  .contact__fields input, .contact__fields textarea, .contact__button button {
    border-radius: 5px;
  }

  .contact__button button {
    width: 100%;
  }

  .section-faqs{
    margin-bottom: 30px;
  }

  @media(min-width: 768px){
    .section-title{
      font-size: 42px;
    }

    .section-faqs{
      margin-bottom: 60px;
    }

    .section-des{
      margin-bottom: 60px;
    }
  }
  </style>
  <!-- page-faqs.liquid -->
  <div class="section-faqs container {{section.settings.layout}}">
    {%- if section.settings.heading != blank -%}
    <h3 class="section-title">
      <span>{{ section.settings.heading }}</span>
    </h3>
    {%- endif -%}
    {%- if section.settings.subheading != blank -%}
    <p class="section-des">
      <span>{{ section.settings.subheading }}</span>
    </p>
    {%- endif -%}

    <div class="row row-faqs">
      {% if section.settings.faqs_form_enable %}
      <div class="col-sm-12 col-md-5 col-lg-4 col-faqs {% if section.settings.faqs_form_pos == 'right' %}order-1{% endif %}">
        {%- form 'contact', id: 'ContactForm' -%}
        {%- if section.settings.heading_faqs != blank -%}
        <h4 class="title-form">
          {{section.settings.heading_faqs}}
        </h4>
        {%- endif -%}
        {%- if form.posted_successfully? -%}
          <div class="form-status form-status-list form__message" tabindex="-1" autofocus>{% render 'icon-success' %} {{ 'templates.contact.form.post_success' | t }}</div>
        {%- elsif form.errors -%}
          <div class="form__message">
            <h2 class="form-status caption-large" role="alert" tabindex="-1" autofocus>{% render 'icon-error' %} {{ 'templates.contact.form.error_heading' | t }}</h2>
          </div>
          <ul class="form-status-list caption-large" role="list">
            <li>
              <a href="#ContactForm-email" class="link">
                {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
              </a>
            </li>
          </ul>
        {%- endif -%}
        <div class="contact__fields">
          <div class="field">
            <input class="field__input" autocomplete="name" type="text" id="ContactForm-name" name="contact[{{ 'templates.contact.form.name' | t }}]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="{{ 'templates.contact.form.name' | t }}">
            <label class="field__label" for="ContactForm-name">{{ 'templates.contact.form.name' | t }}</label>
          </div>
          <div class="field field--with-error">
            <input
              autocomplete="email"
              type="email"
              id="ContactForm-email"
              class="field__input"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="ContactForm-email-error"
              {% endif %}
              placeholder="{{ 'templates.contact.form.email' | t }}"
            >
            <label class="field__label" for="ContactForm-email">{{ 'templates.contact.form.email' | t }} <span aria-hidden="true">*</span></label>
            {%- if form.errors contains 'email' -%}
              <small class="contact__field-error" id="ContactForm-email-error">
                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                <span class="form__message">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</span>
              </small>
            {%- endif -%}
          </div>
        </div>
        <div class="field">
          <input type="tel" id="ContactForm-phone" class="field__input" autocomplete="tel" name="contact[{{ 'templates.contact.form.phone' | t }}]" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" placeholder="{{ 'templates.contact.form.phone' | t }}">
          <label class="field__label" for="ContactForm-phone">{{ 'templates.contact.form.phone' | t }}</label>
        </div>
        <div class="field">
          <textarea
            rows="10"
            id="ContactForm-body"
            class="text-area field__input"
            name="contact[{{ 'templates.contact.form.comment' | t }}]"
            placeholder="{{ 'templates.contact.form.comment' | t }}"
          >
            {{- form.body -}}
          </textarea>
          <label class="form__label field__label" for="ContactForm-body">{{ 'templates.contact.form.comment' | t }}</label>
        </div>
        <div class="contact__button">
          <button type="submit" class="button">
            {{ 'templates.contact.form.send' | t }}
          </button>
        </div>
      {%- endform -%}
      </div>
      {% endif %}
      <div class="col">
        <div class="faqs-content">
          {%- for block in section.blocks -%}
          {%- if block.type == 'html' -%}
          <div class="html-faqs">
            {%- if block.settings.title != blank -%}
            <h3>{{block.settings.title}}</h3>
            {%- endif -%}
            {%- if block.settings.des != blank -%}
            <p class="html-faqs-des">{{block.settings.des}}</p>
            {%- endif -%}
          </div>
          {%- else -%}
          <div class="faq-question collapsed" data-toggle="collapse" data-target="#faq-{{block.id}}">
            {{block.settings.title | default: 'Question'}}
          </div>
          <div id="faq-{{block.id}}" class="collapse faq-answer">
            {{block.settings.answer | default: 'Answer'}}
          </div>
          {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
  
  {% schema %}
  {
    "name": "t:sections.faqs.name",
    "class": "page-section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "t:sections.faqs.settings.heading.label",
        "default": "Frequently Asked Questions"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "t:sections.faqs.settings.subheading.label",
        "default": "Close contact with customers by frequently asked questions"
      },
      {
        "type": "header",
        "content": "t:sections.faqs.settings.header.content"
      },
      {
        "type": "checkbox",
        "id": "faqs_form_enable",
        "label": "t:sections.faqs.settings.faqs_form_enable.label",
        "default": true
      },
      {
        "type": "text",
        "id": "heading_faqs",
        "label": "t:sections.faqs.settings.heading_faqs.label",
        "default": "Ask Your Questions"
      },
      {
       "type": "radio",
       "id": "faqs_form_pos",
       "label": "t:sections.faqs.settings.faqs_form_pos.label",
       "options": [
         {
           "value": "left",
           "label": "t:sections.faqs.settings.faqs_form_pos.options__1.label"
          },
          {
           "value": "right",
           "label": "t:sections.faqs.settings.faqs_form_pos.options__2.label"
          }
       ],
       "default":   "left"
     },
     {
      "type": "header",
      "content": "t:sections.faqs.settings.header_2.content"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "t:sections.faqs.settings.layout.label",
      "default": "layout-1",
      "options": [
        {
          "value": "layout-1",
          "label": "t:sections.faqs.settings.layout.options__1.label"
        },
        {
          "value": "layout-2",
          "label": "t:sections.faqs.settings.layout.options__2.label"
        },
        {
          "value": "layout-3",
          "label": "t:sections.faqs.settings.layout.options__3.label"
        }
      ]
    },
    {
      "type": "color",
      "id": "cl_mix_1",
      "label": "t:sections.faqs.settings.cl_mix_1.label",
      "default": "#222"
    },
    {
      "type": "color",
      "id": "cl_mix_2",
      "label": "t:sections.faqs.settings.cl_mix_2.label",
      "default": "#fff"
    }
  ],
    "blocks": [
      {
        "type": "html",
        "name": "t:sections.faqs.blocks.html.name",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "t:sections.faqs.blocks.html.settings.title.label"
          },
          {
            "type": "textarea",
            "id": "des",
            "label": "t:sections.faqs.blocks.html.settings.des.label"
          }
        ]
      },
      {
        "type": "faq",
        "name": "t:sections.faqs.blocks.faq.name",
        "settings": [
          {
            "type": "textarea",
            "id": "title",
            "label": "t:sections.faqs.blocks.faq.settings.title.label"
          },
          {
            "type": "textarea",
            "id": "answer",
            "label": "t:sections.faqs.blocks.faq.settings.answer.label"
          }
        ]
      }
    ]
  }
  {% endschema %}