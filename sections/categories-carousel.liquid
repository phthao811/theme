<!-- categories-carousel.liquid -->
{{ 'categories-carousel.css' | asset_url | stylesheet_tag }}
{% render 'section-style' %}

<div class="categories-carousel">
    <div class="{%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">
      <h2 class="section-header">{{ section.settings.heading | escape }}</h2>
      <p class="section-text">{{ section.settings.text_decoration }}</p>
        <div class="row">
            <div class="categories-carousel-slick apslick ap-custom-slick"
                data-setting='{"accessibility": true, "arrows": {{ section.settings.arrows }},
                "dots": {{ section.settings.dots }}, "draggable": {{ section.settings.draggable }},
                "infinite": {{ section.settings.infinite }}, "autoplay": {{ section.settings.autoplay }},
                "autoplaySpeed": {{ section.settings.autoplaySpeed }}, "speed": {{ section.settings.speed }},
                "slidesToShow": {{ section.settings.slidesToShow }}, "slidesToScroll": {{ section.settings.slidesToScroll }},
                "vertical": false, "mobileFirst": false, "pauseOnHover": {{ section.settings.pauseOnHover }},
                "rows": {{ section.settings.rows }}, "slidesPerRow": 1, "centerMode": false, "rtl": 1,
                "slidesToShow_992": {{ section.settings.slidesToShow_992 }}, "slidesToScroll_992": {{ section.settings.slidesToScroll_992 }},
                "arrows_992": {{ section.settings.arrows_992 }}, "dots_992": {{ section.settings.dots_992 }},
                "slidesToShow_767": {{ section.settings.slidesToShow_767 }}, "slidesToScroll_767": {{ section.settings.slidesToScroll_767 }},
                "arrows_767": {{ section.settings.arrows_767 }}, "dots_767": {{ section.settings.dots_767 }},
                "slidesToShow_450": {{ section.settings.slidesToShow_450 }}, "slidesToScroll_450": {{ section.settings.slidesToScroll_450 }},
                "arrows_450": {{ section.settings.arrows_450 }}, "dots_450": {{ section.settings.dots_450 }}}'>
                {%- for block in section.blocks -%}
              <div class="categories-carousel-content {%- if section.settings.effects_image -%}{{ 'categories-carousel-effects' | prepend: ' ' }}{%- endif -%}" id="ap-slick-content-{{block.id}}" {{ block.shopify_attributes }}>
                <div class="categories-image">
                    <div class="categories-carousel-blog"
                    >
                    {%- if block.settings.image_categories != blank -%}
                      <img class="categories-carousel__image"
                      srcset="{%- if block.settings.image_categories.width >= 165 -%}{{ block.settings.image_categories | img_url: '165x' }} 165w,{%- endif -%}
                        {%- if block.settings.image_categories.width >= 372 -%}{{ block.settings.image_categories | img_url: '372x' }} 372w,{%- endif -%}
                        {%- if block.settings.image_categories.width >= 480 -%}{{ block.settings.image_categories | img_url: '480x' }} 480w,{%- endif -%}
                        {%- if block.settings.image_categories.width >= 850 -%}{{ block.settings.image_categories | img_url: '850x' }} 850w,{%- endif -%}
                        {%- if block.settings.image_categories.width >= 1070 -%}{{ block.settings.image_categories | img_url: '1070x' }} 1070w,{%- endif -%}
                        {%- if block.settings.image_categories.width >= 1500 -%}{{ block.settings.image_categories | img_url: '1500x' }} 1500w,{%- endif -%}"
                      src="{{ block.settings.image_categories | img_url: 'master' }}"
                      sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                      alt="{{ block.settings.image_categories.alt | escape }}"
                      loading="lazy"
                      width="{{ block.settings.image_categories.width }}"
                      height="{{ block.settings.image_categories.height }}"
                    >
                    {%- else -%}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                    </div>
                </div>
                <div class="categories-carousel-block-text">
                  <h3 class="title-categories-carousel">{{ block.settings.collection.title | escape }}{%- if block.settings.collection.title == blank -%}<span>Title Collection</span>{%- endif -%}</h3>
                  <ul>
                    <li><a href="{{ block.settings.btn_item_1 | default:'#' }}" title="{{ block.settings.btn_items_1_text }}">{{ block.settings.btn_items_1_text }}</li>
                    <li><a href="{{ block.settings.btn_item_2 | default:'#' }}" title="{{ block.settings.btn_items_2_text }}">{{ block.settings.btn_items_2_text }}</li>
                    <li><a href="{{ block.settings.btn_item_3 | default:'#' }}" title="{{ block.settings.btn_items_3_text }}">{{ block.settings.btn_items_3_text }}</li>
                    <li><a href="{{ block.settings.btn_item_4 | default:'#' }}" title="{{ block.settings.btn_items_4_text }}">{{ block.settings.btn_items_4_text }}</li>
                    <li><a href="{{ block.settings.btn_item_5 | default:'#' }}" title="{{ block.settings.btn_items_5_text }}">{{ block.settings.btn_items_5_text }}</li>
                    <li><a href="{{ block.settings.btn_item_6 | default:'#' }}" title="{{ block.settings.btn_items_6_text }}">{{ block.settings.btn_items_6_text }}</li>
                  </ul>
                  <a class="link-base link-categories" href="{{ block.settings.btn_link | default:'#' }}" title="{{ block.settings.btn_text }}">{{ block.settings.btn_text }}
                    <i class="leofar leofa-arrow-right"></i>
                  </a>
                </div>
              </div>
              {%- endfor -%}
            </div>
        </div>
    </div>
</div>

